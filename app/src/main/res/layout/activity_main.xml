<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Title + Network status horizontally -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edu Mate Student App"
            android:textSize="28sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:letterSpacing="0.02" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offline"
            android:textColor="@android:color/white"
            app:chipCornerRadius="16dp"
            app:chipStrokeColor="@android:color/black"
            app:chipStrokeWidth="1dp"
            app:chipBackgroundColor="@color/red_400"/>
    </LinearLayout>

    <!-- Buttons container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:spacing="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/tvTagline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddStudent"
            style="@style/Widget.Material3.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add Student"
            android:textColor="@android:color/white"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="@color/teal_700"
            app:cornerRadius="16dp"
            android:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddCourse"
            style="@style/Widget.Material3.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add Course"
            android:textColor="@android:color/white"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="@color/purple_500"
            app:cornerRadius="16dp"
            android:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewStudents"
            style="@style/Widget.Material3.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="View Students"
            android:textColor="@android:color/white"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="@color/blue_500"
            app:cornerRadius="16dp"
            android:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewCourses"
            style="@style/Widget.Material3.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="View Courses"
            android:textColor="@android:color/white"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="@color/green_500"
            app:cornerRadius="16dp"
            android:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarkAttendance"
            style="@style/Widget.Material3.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/mark_attendance"
            android:textColor="@android:color/white"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="@color/orange_500"
            app:cornerRadius="16dp"
            android:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewAttendance"
            style="@style/Widget.Material3.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/view_attendance"
            android:textColor="@android:color/white"
            app:icon="@android:drawable/ic_menu_agenda"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="@color/blue_500"
            app:cornerRadius="16dp"
            android:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSyncData"
            style="@style/Widget.Material3.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Sync Data"
            android:textColor="@android:color/white"
            app:icon="@android:drawable/stat_notify_sync"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="@color/deep_orange_400"
            app:cornerRadius="16dp"
            android:elevation="6dp"/>
    </LinearLayout>

    <!-- Tagline at bottom -->
    <TextView
        android:id="@+id/tvTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your students efficiently"
        android:textSize="14sp"
        android:textColor="@color/lightGray"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
