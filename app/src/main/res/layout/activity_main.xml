            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Student App"
            android:textAppearance="@style/SubtitleText"
            app:layout_constraintEnd_toStartOf="@+id/chipNetwork"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNetwork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offline"
            android:textColor="@android:color/white"
            app:chipBackgroundColor="@color/red_400"
            app:chipCornerRadius="16dp"
            app:chipStrokeColor="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/tvSubtitle"
            app:layout_constraintEnd_toEndOf="parent"
