        <!-- Re-implementing Sync Button as an Invisible overlay OR just a big button.
             Let's use a Big Button with iconGravity="textStart" styled like a banner. -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSyncData"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Sync Data"
            android:textSize="16sp"
            app:backgroundTint="@color/primaryVariant"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/stat_notify_sync"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconSize="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSubtitle" />



        <!-- Grid Actions -->
        <!-- Row 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddStudent"
            style="@style/Widget.Material3.Button.TonalButton"

            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="8dp"
            android:text="Add\nStudent"
            android:textAlignment="center"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="top"
            app:iconTint="@color/secondaryColor"
            app:layout_constraintEnd_toStartOf="@+id/btnAddCourse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSyncData" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddCourse"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:text="Add\nCourse"
            android:textAlignment="center"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="top"
            app:iconTint="@color/primaryColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnAddStudent"
            app:layout_constraintTop_toBottomOf="@+id/btnSyncData" />

        <!-- Row 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewStudents"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="View\nStudents"
            android:textAlignment="center"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="top"
            app:iconTint="@color/secondaryColor"
            app:layout_constraintEnd_toStartOf="@+id/btnViewCourses"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAddStudent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewCourses"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="View\nCourses"
            android:textAlignment="center"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_view"
            app:iconGravity="top"
            app:iconTint="@color/primaryColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnViewStudents"
            app:layout_constraintTop_toBottomOf="@+id/btnAddStudent" />

        <!-- Row 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarkAttendance"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@string/mark_attendance"
            android:textAlignment="center"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="top"
            app:iconTint="@color/accentColor"
            app:layout_constraintEnd_toStartOf="@+id/btnViewAttendance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnViewStudents" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewAttendance"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/view_attendance"
            android:textAlignment="center"
            app:cornerRadius="16dp"
            app:icon="@android:drawable/ic_menu_agenda"
            app:iconGravity="top"
            app:iconTint="@color/accentColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMarkAttendance"
            app:layout_constraintTop_toBottomOf="@+id/btnViewStudents" />

        <!-- Logout at bottom -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/action_logout"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Logout"
            android:textColor="@color/error"
            app:icon="@android:drawable/ic_lock_power_off"
            app:iconTint="@color/error"
            app:layout_constraintTop_toBottomOf="@+id/btnMarkAttendance" />

        <!-- Tagline at very bottom -->
        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="Manage your students efficiently"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/action_logout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
